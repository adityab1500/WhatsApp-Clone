<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/frame_dialog_name_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_black_40"
        android:elevation="2dp">

        <TextView
            android:id="@+id/contact_name_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Person's Name"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:padding="5dp"
            android:maxLines="1"
            android:ellipsize="end"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/profile_dialog"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/user"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/grey"
        android:layout_below="@id/profile_dialog">

        <ImageView
            android:id="@+id/message_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_message_green_24dp"/>

        <ImageView
            android:id="@+id/info_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_info_outline_green_24dp"/>

    </LinearLayout>

</RelativeLayout>